{
  "name": "opensecure-req-code-reference",
  "displayName": "OpenSecure",
  "description": "HTTP request/response viewer for security testing",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openSecure",
          "title": "OpenSecure",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "openSecure": [
        {
          "id": "openSecureRequests",
          "name": "HTTP Requests"
        }
      ]
    },
    "commands": [
      {
        "command": "openSecure.createStorage",
        "title": "Create OpenSecure Storage",
        "icon": "$(database)"
      },
      {
        "command": "openSecure.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "openSecure.viewRequest",
        "title": "View Request Details"
      },
      {
        "command": "openSecure.clearData",
        "title": "Clear All Data",
        "icon": "$(trash)"
      },
      {
        "command": "openSecure.addCodeReference",
        "title": "Add Code Reference",
        "icon": "$(link)"
      },
      {
        "command": "openSecure.navigateToCodeReference",
        "title": "Navigate to Code Reference"
      },
      {
        "command": "openSecure.chooseStorageLocation",
        "title": "Change Storage Location",
        "icon": "$(folder)"
      },
      {
        "command": "openSecure.renameRequest",
        "title": "Rename",
        "icon": "$(edit)"
      },
      {
        "command": "openSecure.findRequestCode",
        "title": "Find Request Code",
        "icon": "$(search)"
      },
      {
        "command": "openSecure.deleteRequest",
        "title": "Delete Request",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "openSecure.refresh",
          "when": "view == openSecureRequests",
          "group": "navigation@1"
        },
        {
          "command": "openSecure.clearData",
          "when": "view == openSecureRequests",
          "group": "navigation@2"
        },
        {
          "command": "openSecure.chooseStorageLocation",
          "when": "view == openSecureRequests",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "openSecure.addCodeReference",
          "when": "view == openSecureRequests && viewItem == request",
          "group": "inline@1"
        },
        {
          "command": "openSecure.renameRequest",
          "when": "view == openSecureRequests && viewItem == request",
          "group": "navigation@1"
        },
        {
          "command": "openSecure.findRequestCode",
          "when": "view == openSecureRequests && viewItem == request",
          "group": "navigation@2"
        },
        {
          "command": "openSecure.deleteRequest",
          "when": "view == openSecureRequests && viewItem == request",
          "group": "navigation@3"
        }
      ]
    },
    "submenus": [
      {
        "id": "openSecure.requestMenu",
        "label": "Request Options",
        "icon": "$(globe)"
      }
    ],
    "configuration": {
      "title": "OpenSecure",
      "properties": {
        "opensecure.storageLocation": {
          "type": "string",
          "default": "${workspaceFolder}/.opensecure",
          "description": "Location where OpenSecure will store its data. Can be an absolute path or use variables like ${workspaceFolder}",
          "scope": "resource"
        },
        "opensecure.useWorkspaceStorage": {
          "type": "boolean",
          "default": true,
          "description": "If true, stores data in workspace folder. If false, uses global storage location.",
          "scope": "resource"
        },
        "opensecure.serverPort": {
          "type": "number",
          "default": 3700,
          "description": "Port number for the OpenSecure server to listen on",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "package": "vsce package -o build"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0"
  },
  "dependencies": {
    "express": "^4.21.2",
    "http-parser-js": "^0.5.9"
  }
}
