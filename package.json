{
  "name": "opensecure",
  "displayName": "OpenSecure",
  "description": "Security request/response viewer for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "opensecure.ops-test",
        "title": "ops-test"
      },
      {
        "command": "openSecure.clearRequests",
        "title": "Clear All Requests",
        "icon": "$(clear-all)"
      },
      {
        "command": "openSecure.viewRequest",
        "title": "View Request Details"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openSecure",
          "title": "OpenSecure",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "openSecure": [
        {
          "id": "openSecureDataView",
          "name": "HTTP Requests",
          "icon": "$(globe)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "openSecure.clearRequests",
          "when": "view == openSecureDataView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0"
  },
  "dependencies": {
    "express": "^4.21.2",
    "http-parser-js": "^0.5.9"
  }
}
