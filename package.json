{
  "name": "opensecure",
  "displayName": "OpenSecure",
  "description": "HTTP request/response viewer for security testing",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "contributes": {
      "languages": [
        {
          "id": "http",
          "aliases": [
            "HTTP",
            "http"
          ],
          "extensions": [
            ".http",
            ".rest"
          ]
        }
      ],
      "grammars": [
        {
          "language": "http",
          "scopeName": "source.http",
          "path": "./syntaxes/http.tmLanguage.json"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openSecure",
          "title": "OpenSecure",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "openSecure": [
        {
          "id": "openSecureRequests",
          "name": "HTTP Requests"
        }
      ]
    },
    "notebookRenderer": [
      {
        "id": "opensecure-renderer",
        "displayName": "HTTP Request Renderer",
        "entrypoint": "./src/view/notebookRenderer.js"
      }
    ],
    "notebooks": [
      {
        "type": "opensecure-notebook",
        "displayName": "HTTP Request Notebook",
        "selector": [
          {
            "filenamePattern": "*.osreq"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "openSecure.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "openSecure.viewRequest",
        "title": "View Request Details"
      },
      {
        "command": "openSecure.addEndpointNotes",
        "title": "Add Endpoint Notes",
        "icon": "$(note)"
      },
      {
        "command": "openSecure.viewRequestAsNotebook",
        "title": "View as Notebook"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "openSecure.refresh",
          "when": "view == openSecureRequests",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "openSecure.addEndpointNotes",
          "when": "view == openSecureRequests && viewItem == endpoint",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0"
  },
  "dependencies": {
    "express": "^4.21.2",
    "http-parser-js": "^0.5.9"
  }
}
